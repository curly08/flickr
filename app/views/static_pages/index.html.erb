<p class="alert"><%= alert %></p>

<h1>Find Flickr Photos</h1>

<%= form_with url: "/", method: :get do |form| %>
  <%= form.label :flickr_id, "Flickr ID:" %>
  <%= form.text_field :flickr_id %>
  <%= form.submit "Retrieve Photos" %>
<% end %>

<% unless @photos.nil? %>
  <% @photos.each do |photo| %>
    <% id = photo['id'] %>
    <% server_id = photo['server'] %>
    <% secret = photo['secret'] %>
    <% url = "https://live.staticflickr.com/#{server_id}/#{id}_#{secret}.jpg" %>
    <img src=<%= url %> alt="">
  <% end %>
<% end %>
